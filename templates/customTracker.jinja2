{%extends "base.jinja2"%}
{%block content%}
    <div class="container">
    <br>
    {% if post['post']['customName'] == 'CryptoTracker' %}
        <h2 class="d-flex justify-content-center p-3">Trending words on {{post['post']['customName']}} This Week</h2>
    {% else %}
        <h2 class="d-flex justify-content-center p-3">Trending words on {{post['post']['customName']}} today</h2>
    {% endif %}
    <br>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">Rank</th>
                <th scope="col">Word</th>
                <th scope="col">Mentions</th>
            </tr>
        </thead>
        <tbody>
        
{%for item in post['post']['data']%}
    <tr>
      <th scope="row">{{loop.index}}</th>
      <td>{{item.name}}</td>
      <td>{{item.count}}</td>
    </tr>

{%endfor%}
    </tbody>
    </table>
    </div>
{%endblock%}

